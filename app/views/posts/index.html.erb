<h1>Forum</h1>
<p><%= @welcome %></p>

<% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <%= truncate(post.content, length: 14) %>
      </td>
      <td>
        <% if can? :update, post %>
            <%= link_to "edit", edit_post_path(post) %>
            <%= link_to "Delete", post_path(post), method: :delete %>
        <% end %>
      </td>
      <td></td>
    </tr>
    <br />
    <hr />
    <br />
<% end %>