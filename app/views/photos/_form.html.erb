<%= simple_form_for @photo , html: { multipart: true } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :image, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
