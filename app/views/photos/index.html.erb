<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Photo</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.content %></td>
        <td><%= image_tag photo.image.url(:thumb) %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="container-fluid cards-row">
  <div class="container">
    <div class="row">
      <% @photos.each do |photo| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag photo.image.url(:thumb) %>
              <div class="caption">
                <h3><%= photo.title %></h3>
                <p class="card-description"><%= photo.content %></p>
                <p><%= button_to 'Show', photo , :method => "get" %></p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Photo', new_photo_path %>