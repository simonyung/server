<br/>
<%= raw pcomment.pcomment %>
<br/>
<small>by
  <% if !pcomment.user.blank? %>
      <%= pcomment.user.username %>
  <% else %>
      admin
  <% end %>
</small>
<br/>
<% if can? :update, Pcomment %>
    <% if current_user && pcomment.editable_by?(current_user) %>
        <%= link_to "edit", edit_photo_pcomment_path(pcomment.photo, pcomment) %>
        <%= link_to "Delete", [pcomment.photo, pcomment], method: :delete %>
    <% end %>
<% end %>